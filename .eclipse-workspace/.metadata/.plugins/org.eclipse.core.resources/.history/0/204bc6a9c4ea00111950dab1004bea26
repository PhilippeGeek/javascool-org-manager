package org.javascool.core;

// On utilise l'API de réflexion de Java pour ne pas inclure plugin.jar lors de la compilation.
// De plus, cela permet de faire fonctionner ce code même en-dehore d'un navigateur Web.
//      (Ne pas décommenter / Do not uncomment) import netscape.javascript.JSObject;

import org.json.simple.JSONArray;

import java.applet.Applet;
import java.lang.reflect.Method;

/** Une factory pour la communication de Java à JavaScript.
 * @author Philippe VIENNE
 */
public class JSGate {

    /** The applet which is liked with this gateway. */
    private Applet applet;

    /** Build the gate.
     * @param applet The applet which will trig events
     */
    public JSGate(Applet applet){
        setApplet(applet);
    }

    /**
     * @see #applet
     */
    private Applet getApplet() {
        return applet;
    }

    /**
     * @see #applet
     */
    private void setApplet(Applet applet) {
        this.applet = applet;
    }

    /** Trigger off an jQuery Event on the HTML document.
     * @param event The name for event (e.g. myfamousjavaevent)
     * @param data The data to pass in event.data, You may pass a string, it's more secure (to not loose data).
     * @return true if there is no error and the hand is left to JS, false otherwise (print error out on {System.out}
     */
    public boolean triggerOff(String event, Object data){
        return JSGate.triggerOff(getApplet(),event,data);
    }

    /** Envoie un évènement jQuery sur le document de l'applet.
     * Il faut bien entendu que jQuery soit présent sur la page web. Les erreurs sont passé au {System.err}.
     * La fonction n'est pas bloquante pour Java : il n'attendra pas la fin de la propagation de l'évènement JavaScript.
     * @param applet L'applet qui est sur la page web
     * @param event Le nom de l'évènement
     * @param data Les données à passer à JavaScript. Il est recommandé de passer une chaîne de caractères..
     * @return Vrai si tout s'est bien passé
     */
  @SuppressWarnings("unchecked") 
  public static boolean triggerOff(Applet applet, String event, Object data){
        try{
	    JSONArray d = new JSONArray();
            if(data != null)
	      d.add(data);
            Method getWindow = null, evaluationMethod = null;
            Object JSObject = null;
            Class<?> c = Class.forName("netscape.javascript.JSObject");
            Method ms[] = c.getMethods();
            for (int i = 0; i < ms.length; i++) {
                if (ms[i].getName().compareTo("getWindow") == 0)
                    getWindow = ms[i];
                else if (ms[i].getName().compareTo("eval") == 0)
                    evaluationMethod = ms[i];
            }
            Object a[] = new Object[1];
            a[0] = applet;
            JSObject = getWindow.invoke(c, a);
            a[0] = "$(document).trigger(\""+event+"\""+((data==null)?");":","+d.toJSONString()+");");
            evaluationMethod.invoke(JSObject, a);
            return true;
        }catch(Exception e){
            e.printStackTrace(System.err);
            return false;
        }
    }
}
